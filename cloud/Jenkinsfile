pipeline {
    agent any

    environment {
        // --------------------------------------------------------------------
        // PATHS
        // --------------------------------------------------------------------
        TF_ROOT      = "${WORKSPACE}/cloud"
        ANSIBLE_ROOT = "${WORKSPACE}/cloud/ansible"
        AWS_REGION   = "ap-southeast-1"
    }

    stages {
        stage('Validate Environment') {
            steps {
                // Wrapper for Credentials (Standard Binding)
                withCredentials([usernamePassword(credentialsId: 'aws-cloud-credentials', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh 'terraform --version'
                    sh 'ansible --version'
                    sh 'echo "Deploying to Region: $AWS_REGION"'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-cloud-credentials', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir(TF_ROOT) {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-cloud-credentials', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir(TF_ROOT) {
                        sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-cloud-credentials', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir(TF_ROOT) {
                        sh 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }

        stage('Ansible Configuration') {
            steps {
                dir(ANSIBLE_ROOT) {
                    script {
                        // Fix permissions for the private key generated by Terraform
                        sh 'chmod 600 ../generated_key.pem'
                        
                        // Run Ansible to configure the cluster
                        // -i inventory.ini: Uses the file generated by Terraform
                        sh 'ansible-playbook -i inventory.ini playbooks/site.yml'
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace to save disk space
            cleanWs()
        }
        success {
            // Archive the kubeconfig so users can download it
            archiveArtifacts artifacts: 'cloud/k3s_config.yaml', fingerprint: true
            echo "Deployment Successful! Download k3s_config.yaml from the build artifacts."
        }
        failure {
            echo "Deployment Failed. Check logs."
        }
    }
}

pipeline {
    agent any

    environment {
        // --------------------------------------------------------------------
        // CREDENTIALS BINDING
        // --------------------------------------------------------------------
        // Requirement: Create a "Username with password" credential in Jenkins
        // ID: aws-cloud-credentials
        // Username: <Your AWS Access Key ID>
        // Password: <Your AWS Secret Access Key>
        AWS_CREDS = credentials('aws-cloud-credentials')
        
        // Export as standard AWS Environment Variables
        AWS_ACCESS_KEY_ID     = "${AWS_CREDS_USR}"
        AWS_SECRET_ACCESS_KEY = "${AWS_CREDS_PSW}"
        AWS_REGION            = "us-east-1"
        
        // --------------------------------------------------------------------
        // PATHS
        // --------------------------------------------------------------------
        TF_ROOT      = "${WORKSPACE}/cloud"
        ANSIBLE_ROOT = "${WORKSPACE}/cloud/ansible"
    }

    stages {
        stage('Validate Environment') {
            steps {
                sh 'terraform --version'
                sh 'ansible --version'
                sh 'echo "Deploying to Region: $AWS_REGION"'
            }
        }

        stage('Terraform Init') {
            steps {
                dir(TF_ROOT) {
                    // Initialize Terraform (downloads providers)
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir(TF_ROOT) {
                    // Create an execution plan
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir(TF_ROOT) {
                    // Apply the plan to create/update infrastructure
                    // This creates EC2s and generates 'ansible/inventory.ini'
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Ansible Configuration') {
            steps {
                dir(ANSIBLE_ROOT) {
                    script {
                        // Fix permissions for the private key generated by Terraform
                        sh 'chmod 600 ../generated_key.pem'
                        
                        // Run Ansible to configure the cluster
                        // -i inventory.ini: Uses the file generated by Terraform
                        sh 'ansible-playbook -i inventory.ini playbooks/site.yml'
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace to save disk space
            cleanWs()
        }
        success {
            // Archive the kubeconfig so users can download it
            archiveArtifacts artifacts: 'cloud/k3s_config.yaml', fingerprint: true
            echo "Deployment Successful! Download k3s_config.yaml from the build artifacts."
        }
        failure {
            echo "Deployment Failed. Check logs."
        }
    }
}
